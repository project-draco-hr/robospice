{
  View view;
  Tweet currentItem=getItem(position);
  if (convertView != null) {
    view=convertView;
  }
 else {
    view=new TweetListItemView(getContext());
  }
  ((TweetListItemView)view).updateView(currentItem);
  updateListItemViewAsynchronously(currentItem,(SpiceListItemView<Tweet>)view);
  return view;
}
